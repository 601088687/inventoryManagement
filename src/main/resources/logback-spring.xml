        </encoder>
        <connectionStrategy>
            <roundRobin>
                <connectionTTL>5 minutes</connectionTTL>
            </roundRobin>
        </connectionStrategy>
    </appender>
-->
    <logger name="com.boot" level="info"/>
    <logger name="org.apache.ibatis" level="info"/>
    <root level="info">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="BUSINESS_FILE"/>
        <appender-ref ref="ERROR_FILE"/>
    </root>

</configuration>